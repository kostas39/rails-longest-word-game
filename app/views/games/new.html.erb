<h1>New game</h1>

<div class="numbers">
  <ul>
    <li><%= @letters[0] %></li>
    <li><%= @letters[1] %></li>
    <li><%= @letters[2] %></li>
    <li><%= @letters[3] %></li>
    <li><%= @letters[4] %></li>
    <li><%= @letters[5] %></li>
    <li><%= @letters[6] %></li>
    <li><%= @letters[7] %></li>
    <li><%= @letters[8] %></li>
    <li><%= @letters[9] %></li>
  </ul>
</div>
<form action="/score" method="post">
  <label for="word">What is the longest word you can find?</label><br>
  <input type="text" id="word" name="word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
